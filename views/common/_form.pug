section.form#mail
  .container
    .status.hidden
    .form__subtitle.subtitle Contact details
    h2.form__title.title Write, let's chat
    form(action="/" method="POST" enctype="application/x-www-form-urlencoded").form-email#form-email
      .form-email__line
        label.form-email__label(for="") Name *
        input.form-email__input(type="text" name="name")
      .form-email__line
        label.form-email__label(for="") Email *
        input.form-email__input(type="email" name="email")
      .form-email__line
        label.form-email__label(for="") Message
        textarea(name="message").form-email__textarea
      .form-email__line
        button(type="submit").form-email__button.button Send
script(src="/assets/js/app.js" defer)